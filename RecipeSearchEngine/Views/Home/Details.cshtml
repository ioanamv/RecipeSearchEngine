@model RecipeSearchEngine.Models.Recipe

@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<div class="row mt-3">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" />
    </div>
    <div class="col-md-8">
        <p><strong>Cooking Time:</strong> @Model.CookingTimeMinutes min</p>
        <p><strong>Difficulty:</strong> @Model.Difficulty</p>
        <p><strong>Cuisine:</strong> @Model.Cuisine</p>
        <p>
            <strong>Dietary Restrictions:</strong>
            @if (Model.DietaryRestrictions != null && Model.DietaryRestrictions.Any())
            {
                @string.Join(", ", Model.DietaryRestrictions)
            }
            else
            {
                <text>None</text>
            }
        </p>

        <h4>Ingredients</h4>
        <ul>
            @foreach (var ingredient in Model.Ingredients)
            {
                <li>@ingredient</li>
            }
        </ul>

        <h4>Instructions</h4>
        <p>@Model.Instructions</p>

        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Back to Search</a>
    </div>
</div>
